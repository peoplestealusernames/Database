{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": [
            "es6",
            "ES2020.Promise"
        ],
        "allowJs": true,
        "outDir": "js",
        "rootDir": "ts",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "moduleResolution": "node",
    }
}